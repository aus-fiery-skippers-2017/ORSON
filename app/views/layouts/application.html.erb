<!DOCTYPE html>
<html>
  <head>
    <title>ORSON</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="row nav-bar">
  	<div class="twelve columns">
  		<nav>
  			<ul style="list-style: none;">
          <li><%= link_to image_tag("/assets/images/orson_white.png", :alt => "ORSON home"), root_path, class: "logo" %></li>
            <li class="user-link"><%= link_to "Movies", movies_path %></li>
          <% if user_signed_in? %>
            <li class="user-link"><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
            <li class="user-link"><%= link_to('Profile', user_path(current_user.id)) %></li>
          <% else %>
            <li class="user-link"><%= link_to('Sign in', new_user_session_path) %></li>
            <li class="user-link"><%= link_to('Sign up', new_user_registration_path) %></li>
          <% end %>
        </ul>
  		</nav>
  	</div>
  </div>
  <div class="content">

    <%= yield %>

  </div>
  </body>
</html>
